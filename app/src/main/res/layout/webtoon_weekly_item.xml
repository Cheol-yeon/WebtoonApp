        android:text="제88화"
        android:textColor="#666666"
        android:textSize="11sp"
        />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_weeklyicon1"
        android:layout_width="8.2dp"
        android:layout_height="6.39dp"
        android:src="@drawable/ico_view_02"
        app:layout_constraintStart_toEndOf="@id/tv_weeklySubtitle1"
        app:layout_constraintTop_toBottomOf="@id/tv_weeklyTitle1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="2dp"
